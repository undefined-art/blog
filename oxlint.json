{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "out",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs"
  ],
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}

